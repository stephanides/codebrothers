extends layout.pug

block content
  #responseModal.modal.fade.hide(tabindex="-1", role="dialog")
    .modal-bg
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          h5.modal-title Informácia
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
        .modal-body
          p
        .modal-footer.text-right
          button.btn.btn-secondary(type="button", data-dismiss="modal") Zavrieť
          
  #wrapper.container-fluid
    header.container-fluid.position-fixed
      .container.d-flex.justify-content-between.pt-2.pb-2
        .desktop.justify-content-between
          .logo
            a.section-1(href="./#")
              img(src="./assets/images/icons/logo_codebrothers.svg", alt="codebrothers s. r. o.")
          nav
            ul.d-flex.align-items-center
              li
                a.section-2(href="#services", title="Služby") Služby
              li
                a.section-3(href="#ref", title="Referencie") Referencie
              // Hidden till time when we will have GDPR processed        
              //li
                a.section-4.btn-outline(href="#contact", title="Kontaktujte nás") Kontaktujte nás
        .mobile.d-flex.justify-content-between.w-100
          .logo
            a.section-1(href="./#")
              img(src="./assets/images/icons/logo_codebrothers.svg" alt="codebrothers s. r. o.")
          .nav-btn
            button.btn(type="button")
              i.fas.fa-align-right
          nav.d-none.bg-animate
            ul.d-flex.align-items-center
              li
                a.section-1(href="./#", title="codebrothers s. r. o.") Domov
              li
                a.section-2(href="#services", title="Služby") Služby
              li
                a.section-3(href="#ref", title="Referencie") Referencie
              // Hidden till time when we will have GDPR processed           
              //li
                a.section-4(href="#contact", , title="Kontaktujte nás") Kontaktuje nás

    .container
      section#home.section-1
        .row
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.d-flex.align-items-center
            .fancy-text.position-relative
              .typingText
                h3 Čas sú peniaze,
                h3 preto #[strong rýchly web] zarába!#[strong.typewriter _]
              .typingText
                h3 Pridaj tempo svojmu webu
                h3 a rozbehni #[strong biznis] na plné obrátky!#[strong.typewriter _]
              .typingText
                h3 Odlíš svoj web od konkurencie!
                h3 Dopraj mu rýchle #[strong tempo]! #[strong.typewriter _]
              //a.btn-outline.mt-2.section-2(href="#services", title="Chcem vedieť viac") Chcem vedieť viac
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.position-relative
            .phone.position-relative.margin-block
              img(src="./assets/images/phone1.png", alt="")
            .position-absolute.shape-circle
        .row
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.position-relative
            .position-relative.pc.margin-block
              img.lazy(data-src="./assets/images/pc1.png", alt="")
            .shape-block.position-absolute
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.d-flex.align-items-center
            ul.position-relative.q-list.mt-2.mb-2
              li Aj ty stihneš skočiť na obed a späť,#[br]kým sa tvoj web načíta?
              li Máš už plné zuby wordpressu a#[br]podobných zastaraných systémov?
              li Tvoji zákazníci sú nervózni zo#[br]slimačieho tempa tvojho webu?
              li Získaj web s rýchlosťou svetla a#[br]#[strong zvýš tempo svojho biznisu!]
        .row
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.d-flex.align-items-center.bg-white
            ul.position-relative.q-list.success.mt-2.mb-2
              li Získaš spoľahlivý web s rýchlosťou#[br]načítania do 1 sekundy
              li Stúpne počet návštevníkov#[br]na tvojom eshope
              li Preukázateľne sa ti zvýšia predaje#[br]aj o 50%
              li Znížiš mieru okamžitých obchodov#[br]z tvojho webu aspoň o 10%
              li Zákazníci na tvojej stránke strávia#[br]dlhší čas, a tak máš viac priestoru#[br]predávať
              li Spokojnosť kupujúcich porastie#[br]úmerne s rýchlosťou tvojho webu
          .col-xl-6.col-lg-6.col-md-6.col-sm-12.position-relative
            .position-relative.phone-2.margin-block
              img.lazy(data-src="./assets/images/phone2.png", alt="")
            .shape-triangle.position-absolute
            
      section#services.section-2
        .row
          .col-12.mt-5.mb-3
            h2.text-center.mb-2 Čo zahŕňa služba tvorby webov#[br]od #[strong Codebrothers]?
            p.text-center Vyberte si niektorú z naších služieb a obratom Vám napíšeme,#[br]aby sme sa o Vašom projekte dozvedeli viac.
        .row
          .col-12.cards
            .card.position-relative.pl-2.pr-2.pt-2.mb-2
              h3.strong.mb-2.text-center Rýchly web na mieru
              p Vytvoríme ti web založený na revolučných technológiách#[br]#[strong Angular #[i.fab.fa-angular.text-color-angular]], #[strong NodeJs #[i.fab.fa-node-js.text-color-node]], #[strong React #[i.fab.fa-react.text-color-react]] a ďalších.#[br]#[br]Nepoznávaš ich? Žiaden problém, my im rozumieme skvelo!#[br]#[br]Už žiaden ťažkopádny Wordpress, Joomla či Magenta. Prispôsobíme štruktúru a vizuál webu tvojim požiadavkám.
              .icon.position-absolute
                i.fas.fa-code.position-absolute
            .card.position-relative.pl-2.pr-2.pt-2.mb-2
              h3.strong.mb-2.text-center Komplexný servis
              p Ponúkame ti riešenie ako zvýšiť predaje skvalitnením tvojich stránok.#[br]#[br]Nielenže tvoj web dostane nový šat s rýchlosťou blesku #[i.fas.fa-bolt.text-color-bolt], zabezpečíme ti aj texty, ktoré sú čerešničkou predaja.
              .icon.position-absolute
                i.fas.fa-handshake.position-absolute
            .card.position-relative.pl-2.pr-2.pt-2.mb-2
              h3.strong.mb-2.text-center Úvodná konzultácia zdarma
              //Vyplň a odošli kontaktný formulár, čím si zabezpečíš 
              p 1. konzultácia úplne zadarmo.#[br]#[br]Vypracujeme ti možnosti vylepšenia aj cenovú ponuku grátis. #[i.fas.fa-gift.strong]
              .icon.position-absolute
                i.fas.fa-comments.position-absolute
      
      section#ref.section-3.mb-10
        .row
          .col-12.mt-5.mb-5
            h2.text-center Pristupujeme zodpovedne#[br]ku každému z našich #[strong klientov]
        .row
          .col-12.refs
           .position-relative.ref.mb-5
             img.lazy(data-src="./assets/images/cw-logo.png" alt="")
           .position-relative.ref.mb-5
             img.lazy(data-src="./assets/images/bk-logo.png" alt="")
           //.position-relative.ref
             img.lazy(data-src="./assets/images/cw-logo.png" alt="")

      // Hidden till time when we will have GDPR processed
      //section#contact.section-4
        h3.mb-3 Zaujali sme vás? Túžite po rýchlom webe? #[strong Kontaktujte nás!]
        form#contact-form(onsubmit="submitForm(this)")
          .row
            .col-12
              .form-row.mb-3
                //label(for="name") Uvedťe svoje meno, alebo názov firmy
                input#name(type="text", placeholder="Meno, alebo názov firmy", required)
              .form-row.mb-3
                //label(for="email") Uvedťe svoj e-mail
                input#email(type="email", placeholder="E-mail", required)
              .form-row.mb-5.mb-3
                //label(for="text") Popíšte nám svoju predstavu
                textarea#text(name="", cols="30", rows="10", placeholder="Popíšte nám svoju predstavu, či nápad, ktorý chcete zrealizovať.\n\nTešíme sa na spoluprácu.", required)
              .form-row.text-center.mb-0
                button.btn-outline.btn-large(type="submit") Kontaktovať

    .container-fluid
      footer.pt-2.pb-2.mt-0
        .row
          .col-6.d-flex.align-items-center
            p.mb-0 CODEBROTHERS &copy; 2018. Všetky práva vyhradené.#[br]#[a(href="mailto:info@codebrothers.sk" title="Odoslať email") info@codebrothers.sk]
          .col-6
            .logo.text-right
              img.lazy(data-src="./assets/images/icons/logo_codebrothers.svg", alt="codebrothers s. r. o.")

block scripts
  script(src="./assets/js/codebrothers.min.js")